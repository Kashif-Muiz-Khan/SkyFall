<h3>HabitQuickGrid</h3>


@using Microsoft.AspNetCore.Components.QuickGrid
@using SkyFall.Context
@using SkyFall.Model
@inject HabitProvider HabitProvider
@inject NavigationManager NavigationManager


@if (Habits == null)
{
    <p>Loading...</p>
}
else
{
    <div>
        <QuickGrid Theme="bootstrap" Class="table" Items="@FilteredHabits" Pagination="@pagination">
            <PropertyColumn Property="@(c => c.Id)" Sortable="true" />
            <PropertyColumn Property="@(c => c.Type)" Sortable="true">
                <ColumnOptions>
                    <div class="search-box">
                        <input type="search" autofocus @bind="nameSearch" @bind:event="oninput" placeholder="Habit..." />
                    </div>
                </ColumnOptions>
            </PropertyColumn>

            <PropertyColumn Property="@(c => c.Description)" Sortable="true" />
            <PropertyColumn Property="@(c => c.Point)" Sortable="true" />

        </QuickGrid>
        <Paginator State="@pagination" />
    </div>
}









@code {
    private EditContext editContext;
    private Habit model;
    private IQueryable<Habit>? habits;
    private PaginationState pagination = new PaginationState { ItemsPerPage = 10 };
    private string nameSearch;

    public IQueryable<Habit>? Habits { get; set; }

    private IQueryable<Habit>? FilteredHabits
    {
        get
        {
            IQueryable<Habit>? filtered = Habits;
            if (!string.IsNullOrEmpty(nameSearch))
            {
                filtered = filtered?.Where(c => c.Description.Contains(nameSearch, StringComparison.CurrentCultureIgnoreCase));
            }
            return filtered;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await GetHabits();
    }

    private async Task GetHabits()
    {
        Habits = (await HabitProvider.GetAllHabitsAsync()).AsQueryable();
        model = new Habit();
        editContext = new EditContext(model);
    }









}
